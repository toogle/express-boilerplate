doctype 5

block vars
	title = "Express Boilerplate"
	description = "Express Boilerplate"

html(lang="en")
	head
		meta(charset="utf8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		title= title
		meta(name="description", content=description)
		meta(name="viewport", content="width=device-width, initial-scale=1.0")

		block styles
			link(href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css", rel="stylesheet", media="all")

	body
		block content

		block scripts
			// if lt IE 9
				script(src="/static/js/vendor/html5shiv/dist/html5shiv.js")
